@model Pagae.Models.HomeViewModels.PayViewModel

@{
    ViewData["Title"] = "Pay";
}

<form asp-controller="Home" asp-action="Pay" method="post" class="form-horizontal">
    <div class="row">
        <div class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Pay for?
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Users.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => Model.Users[i].Name)
                                @Html.HiddenFor(modelItem => Model.Users[i].Id)
                            </td>
                            <td>
                                @Html.EditorFor(modelItem => Model.Users[i].Selected)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div>
                <button type="submit" class="btn btn-success" aspne>Pay</button>
            </div>
        </div>
    </div>
</form>